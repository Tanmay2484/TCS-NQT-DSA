//Reverse a array
#include <bits/stdc++.h>
using namespace std;
int main() {
    int n=7;
    int arr[n]={2,5,6,1,9,7,0};
    int i=0,j=n-1;
    while(i<j){
        swap(arr[i++],arr[j--]);
    }
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}
or
#include <bits/stdc++.h>
using namespace std;
int main() {
    int n=7;
    int arr[n]={2,5,6,1,9,7,0};
   reverse(arr,arr+n);
    for(int i=0;i<n;i++){
        cout<<arr[i]<<" ";
    }
}

